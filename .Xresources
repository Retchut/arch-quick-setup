! transparency value (0-1)
st.alpha: 0.8

! Set a default font and font size as below:
*.font: Liberation Mono Bold:pixelsize=16:antialias=true:autohint=true
st.font: Liberation Mono:pixelsize=20:antialias=true:autohint=true

! ############# constant terminal colors #################

! no idea what these are. keeping them as white so I know when I come across them
st.color1:       #ffffff
st.color3:       #ffffff
st.color5:       #ffffff
st.color8:       #ffffff
st.color9:       #ffffff
st.color11:      #ffffff
! some of these are error messages on nano and compile text when running make
! some of these are mocp tag thingies and selected nano text

! color 0  --> tmp dir text                                     |   mocp selected text/selected data background
! color 2  --> external partition directory background
! color 4  --> external partition directory text                |   mocp playing data background
! color 6  --> system stuff?                                    |   mocp selected background
! color 10 --> external partition files, some dotfiles
! color 12 --> internal partition directory text, some dotfiles |   mocp data text
! color 13 --> sockets/pipes?
! color 14 --> some dotfiles
! color 15 -->                                                  |   mocp now playing name

st.color0:       #c20b0b
st.color2:       #ff00a1
st.color10:      #ff00a1
st.color12:      #2032de
st.color13:      #0dc7c3
st.color14:      #c20b0b
st.color15:      #ffffff

