! #################### theme 2 #########################
! --------st---------
! cursor colors when on the foreground or background (matches non-selected tab background color)
st.foreground:   #bdbcbc
st.background:   #bdbcbc
! mocp non-gray backgrounds
st.color4:       #00ffb9
st.color6:       #00ffb9
! text and standard files
st.color7:       #f90303


! --------dwm---------
! border color
! selected window
dwm.selbordercolor: #005577
! non-selected window
dwm.normbordercolor: #444444

! background and bar colour
! selected tab         -> matches non-selected tab font colour 
dwm.selbgcolor: #f90303
! non-selected tab     -> matches selected tab font colour
dwm.normbgcolor: #bdbcbc

! font color
! selected tab         -> matches non-selected tab background colour
dwm.selfgcolor: #bdbcbc
! non-selected tab     -> matches selected tab background colour 
dwm.normfgcolor: #f90303

! test inactive colours
!    1      2
! 720000 f90303


! -------dmenu--------
! background
! selected              -> matches dwm selected background
dmenu.selbackground: #f90303
! non-selected          -> matches dwm non-selected background
dmenu.background: #bdbcbc

! text
! selected              -> matches dwm selected text
dmenu.selforeground: #bdbcbc
! non-selected          -> matches dwm non-selected text
dmenu.foreground: #f90303

