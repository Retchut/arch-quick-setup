################### ASUSCTL ####################

#change fan mode
"asusctl profile -n"
	XF86Launch4

#rgb brightness up
"asusctl -k high"
	XF86KbdBrightnessUp

#rgb brightness down
"asusctl -k off"
	XF86KbdBrightnessDown

#next aura profile
"asusctl led-mode -n"
	XF86Launch3

#prev aura profile
"asusctl led-mode -p"
	XF86Launch2
