################# PULSE AUDIO #################

#increase volume
#"pactl set-sink-volume @DEFAULT_SINK@ +2000"	# only works on the default sink
"for SINK in `pacmd list-sinks | grep 'index:' | cut -b12-`; do pactl set-sink-volume $SINK +5%; done"
	XF86AudioRaiseVolume

#decrease volume
#"pactl set-sink-volume @DEFAULT_SINK@ -2000"	# only works on the default sink
"for SINK in `pacmd list-sinks | grep 'index:' | cut -b12-`; do pactl set-sink-volume $SINK -5%; done"
	XF86AudioLowerVolume


#mute volume
"pactl set-sink-mute @DEFAULT_SINK@ toggle"
	XF86AudioMute

#mute microphone
"pactl set-source-mute @DEFAULT_SOURCE@ toggle"
	Control+Alt + m

#printscreen
"scrot ~/screenshots/%Y%m%d-%H-%M-%S-screenshot.png"
	Print

################################################

################## BACKLIGHT ###################

"xbacklight -dec 10"
	XF86MonBrightnessDown

"xbacklight -inc 10"
	XF86MonBrightnessUp

